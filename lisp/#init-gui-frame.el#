;;; init-gui-frames.el --- Behaviour specific to non-TTY frames
;; -*- lexical-binding: t -*-
;;; Commentary:
;;; Code:

;; Suppress GUI features
(setq use-file-dialog nil
      use-dialog-box nil)

;; Disable welcome message
;; (setq inhibit-startup-screen t)


;; Open GUI Emacs in fullscreen
(add-to-list 'default-frame-alist '(fullscreen . maximized))

;; Enable mouse & touchscreen support in non-GUI Emacs. Enabled by
;; default on Termux.
(unless (display-graphic-p)
  (xterm-mouse-mode))

(setq-default window-resize-pixelwise t
              frame-resize-pixelwise t) ;; Fix Fullscreen GUI on KDE.

(provide 'init-gui-frame)
;;; init-gui-frame.el ends here
